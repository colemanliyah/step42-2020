<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- HTML FILES -->
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/loggedin/index.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/loggedin/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>join</servlet-name>
        <jsp-file>/loggedin/join.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>join</servlet-name>
        <url-pattern>/loggedin/join</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>quiz</servlet-name>
        <jsp-file>/loggedin/quiz.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>quiz</servlet-name>
        <url-pattern>/loggedin/quiz</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>gameBoard</servlet-name>
        <jsp-file>/loggedin/gameBoard.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>gameBoard</servlet-name>
        <url-pattern>/loggedin/gameBoard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>start</servlet-name>
        <jsp-file>/loggedin/start.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>start</servlet-name>
        <url-pattern>/loggedin/start</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>gameBoard</servlet-name>
        <jsp-file>/loggedin/gameBoard.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>gameBoard</servlet-name>
        <url-pattern>/loggedin/gameBoard</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.google.sps.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/loggedin/*</url-pattern>
    </filter-mapping>
 </web-app>